@model GoldDashboard.Models.AppUsers
@{
    ViewBag.Title = "Index";
}
<style>
    .form-group {
        float: left;
    }

</style>
<div class="row">
    <div class="col-md-6 col-xs-12">

        <div class="card">
            <div class="card-header">
                User Details
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-4 text-right"><small>UserId</small> </div>
                    <div class="col-8">
                        <b><a style="color: #007bff"> @Model.GoldUserName</a></b>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 text-right"><small>Deposit</small> </div>
                    <div class="col-8">INR @Model.Deposit</div>
                </div>
                <div class="row">
                    <div class="col-4 text-right"><small>Deposit Date</small> </div>
                    <div class="col-8">@Model.DepositDateStr</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="card">
            <div class="card-header">User Balance</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-4 text-right"><small>Balance</small> </div>
                    <div class="col-8">INR @Model.Balance</div>
                </div>

                <div class="row">
                    <div class="col-4 text-right"><small>Profit</small> </div>
                    <div class="col-8">
                        <span>
                            <small>INR</small> @Model.TotalProfit &nbsp;
                        </span>
                        (
                            @if (Model.PercentProfit > 0)
                            {
                                <span class="text-success mr-1 textper">
                                    <i class="fas fa-arrow-up"></i>
                                    @Model.PercentProfit %
                                </span>
                            }
                            else
                            {
                                <span class="text-warning mr-1 textper">
                                    <i class="fas fa-arrow-down"></i>
                                    @Model.PercentProfit %
                                </span>
                            }
                        )
                    </div>
                </div>

            </div>
        </div>

        
    </div>
</div>

<div class="row">
    <div class="col-lg-4 col-xs-12">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.PerDayProfit</h3>
                <p>Today's Profit</p>
            </div>
            <div class="icon">
                <i class="ion ion-android-calendar"></i>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-xs-12">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.PerWeekProfit</h3>
                <p>Week Profit</p>
            </div>
            <div class="icon">
                <i class="ion ion-calendar"></i>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-xs-12">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.PerMonthProfit</h3>
                <p>Month Profit</p>
            </div>
            <div class="icon">
                <i class="ion ion-calendar"></i>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
}
