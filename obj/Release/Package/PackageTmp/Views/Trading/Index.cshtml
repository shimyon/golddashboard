        $(document).ready(function () {


            $.ajax({
                'url': "/Trading/GetManualTradingList",
                'method': "GET",
                'contentType': 'application/json'
            }).done(function (data) {

                $('#example2').dataTable({
                    "paging": true,
                    "lengthChange": false,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": false,
                    "responsive": true,
                    "lengthMenu": [[5, 10, -1], [5, 10, 'All']],
                   
                    "aaData": data,

                    "columns": [
                        { "data": "id" },
                        { "data": "tradingSymbol" },
                        { "data": "symbolToken" },
                        { "data": "optionType" },
                        { "data": "transactionType" },
                        { "data": "price" },
                        { "data": "addedDateText" },
                        { "data": "lotsize" },
                        { "data": "IsExecute" },

                        {
                            "data": "WithSellButton",
                            render: function (data, type, row) {
                                if (data == "GetSellButton") {
                                    
                                    return "<input type='button' id='BuyOrSellBtn' class='btn btn-primary' onclick='BuyOrSell(" + row.id + ")' value='Sell' />";
                                } else {
                                    return "";
                                }
                            }
                        }

                    ]
                });
            });


            /*getUserListForSelect();*/

            getManualEntryList();
            var pageSize = 20;

            $('.select2_example').select2(
                {
                    minimumInputLength: 3,
                    ajax: {
                        /*delay: 150,*/
                        url: "/Trading/GetIndexList",
                        dataType: 'json',
                        data: function (params) {

                            return {
                                searchTerm: params.term
                            };

                        },

                        processResults: function (data) {
                            
                            return {
                                results: data,
                            };

                        }
                    },
                    placeholder: "-- Select --"
                });

            /*SELECT USER*/
            $('#SelectUserBox').select2(
                {
                    minimumInputLength: 3,
                    ajax: {
                        /*delay: 150,*/
                        url: "/Trading/UserListForSelection",
                        dataType: 'json',
                        data: function (params) {

                            return {
                                searchTerm: params.term
                            };

                        },

                        processResults: function (data) {
                            debugger
                            return {
                                results: data,
                            };

                        }
                    },
                    placeholder: "-- Select --"
                });

        })

        $('.select2_example').on('select2:close', function (e) {

            var data = e.params.originalSelect2Event.data.indexName;
            
            $.ajax({
                url: "/Trading/GetTokenSymbol",
                type: "post",
                data: { "indexName": data },
                success: function (data) {

                    if (data) {
                        $("#TokenSymbol").val(data);
                        $("#IndexOrignalName").val(e.params.originalSelect2Event.data.id)

                    }

                }
            });
        });

        $('#SelectUserBox').on('change', function () {
            debugger
            const values = $(this).val();
            if (values.length > 1) {
                const index = values.indexOf('All');
                if (index > -1) {
                    values.splice(index, 1);
                    $(this).val(values);
                }
            } else if (values.length === 0) {
                $(this).val('All');
            }
            $(this).trigger('change.select2'); // Notify only Select2 of changes;
        });

        function getManualEntryList() {

            $.ajax({
                url: "/Trading/GetManualTradingList",
                type: "get",
                success: function (data) {

                    if (data) {

                        $("#getManualEntryList").show();
                        $.each(data, function (index, value) {

                            $("#tblManualTrade tbody").append("<tr><td>" + value.id + "</td><td>" + value.tradingSymbol + "</td><td>" + value.symbolToken + "</td><td>" + value.optionType + "</td><td>" + value.transactionType + "</td><td>" + value.price + "</td><td>" + value.addedDateText + "</td><td>" + value.lotsize + "</td><td>" + value.IsExecute + "</td><td>" + (value.IsExecute == 1 && value.transactionType == "Buy" && value.WithSellButton == "GetSellButton" ? "<input type='button' id='BuyOrSellBtn' class='btn btn-primary' onclick='BuyOrSell(" + this.id + ")' value='Sell'/> " : "") + "</td></tr>");

                        });

                    }

                }
            });
        }
        function BuyOrSell(id) {
            
            $.ajax({
                url: "/Trading/BuyOrSellManualTrading",
                type: "post",
                data: { "Id": id },
                success: function (data) {
                    if (data = 1) {

                        alert("Data inserted sucessfully");
                        window.location.reload();
                    }
                }
            });
        }

        function sendData() {
            var IndName = $("#IndexOrignalName").val();
            
            var TokenSymbol = $("#TokenSymbol").val();
            var price = $("#exampleInputPrice").val();
            var lotSize = $("#exampleFormControlSelect1").val();
            var transactionType = $("input[name='exampleRadios']:checked").val();
            var SelectedUser = $("#SelectUserBox").val();
            var indexInsertData = { "IndexName": IndName, "TokenSymbol": TokenSymbol, "Price": price, "LotSize": lotSize, "TrasactionType": transactionType, "SelectedUser": SelectedUser };
            
            $.ajax({
                url: "/Trading/Index",
                type: "post",
                data: { "TradingModel": indexInsertData },
                success: function (data) {
                    if (data = 1) {
                        alert("Data inserted sucessfully");
                        $('#exampleInputIndex').val(1).trigger('change.select2');
                        $("#exampleInputPrice").val('');
                        $("#TokenSymbol").val('');
                        $("#exampleFormControlSelect1").val('');
                        $("#SelectUserBox option:first").attr('selected', 'selected');
                        $("#Buy").prop("checked", true);

                        window.location.reload();


                    }
                }
            });
        }

        $("#exampleInputIndex").keyup(function () {
            var startingKeyword = $(this).val();
            $.ajax({
                url: "/Trading/GetIndexNameAutoSuggestion",
                type: "post",
                data: { "keyword": startingKeyword },
                success: function (data) {
                    $("#cb1-listbox").empty();
                    $.each(data, function (index, item) {
                        $("#cb1-listbox").append('<option>' + item + '</option>');
                    })
                }
            });
        }).on('focusin', function () {
            $("#cb1-listbox").show();
        })

        $("#cb1-listbox").on('change', function () {
            var optionValue = $(this).val();
            $("#exampleInputIndex").val(optionValue);

        }).on('focusout', function () {

            $(this).hide();
        }).keypress(function (e) {
            var key = e.which;
            if (key == 13) {
                $(this).hide();
            }
        })


    </script>

}
