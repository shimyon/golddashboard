
@{
    ViewBag.Title = "Trading";
}
<style>
    .form-check {
        display: inline;
    }

    .cb1-listbox {
        display: none;
    }

    #getManualEntryList {
        display: none;
        font-size: 12px;
    }

    #tblManualTrade {
        font-size: 13px;
    }

    .select2 {
        width: 100% !important;
    }
</style>

<div class="row">
    <div class="col-12 col-xl-5">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Manual Trading</h3>
            </div>
            <div class="card-body">


                <div class="combobox combobox-list" id="SuggestionBox">

                    <div class="form-group">
                        <label for="exampleInputIndex">Trading Symbol</label>
                        <select class="selectNew form-control select2_example" id="exampleInputIndex" >
                            <option>Select Index Name</option>
                        </select>
                        <input type="hidden" id="IndexOrignalName" name="IndexOrignalName" />
                    </div>
                </div>


                <div class="combobox combobox-list" id="UserSuggestionBox">

                    <div class="form-group">
                        <label for="SelectUserBox">Select User</label>

                        <select class="selectNew form-control" id="SelectUserBox" multiple>
                            <option id="defaultId" value="All" selected="selected">All</option>
                        </select>
                    </div>
                </div>



                <div class="form-group">
                    <label for="TokenSymbol">Token Symbol</label>
                    <input type="text" disabled class="form-control" id="TokenSymbol" value="">
                </div>


                <div class="form-group">
                    <label for="exampleInputPrice">Price</label>
                    <input type="text" class="form-control" id="exampleInputPrice" placeholder="Enter Price">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Lot Size</label>
                    <input type="text" class="form-control" id="exampleFormControlSelect1">
                </div>


                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="Buy" value="Buy" checked>
                    <label class="form-check-label" for="Buy">
                        Buy
                    </label>
                </div>&nbsp;
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="Sell" value="Sell">
                    <label class="form-check-label" for="Sell">
                        Sell
                    </label>
                </div>

            </div>


            <div class="card-footer">
                <button type="button" onclick="sendData()" class="btn btn-primary">Submit</button>
            </div>

        </div>
    </div>


</div>



<div class="row">
    <div class="col-12">
