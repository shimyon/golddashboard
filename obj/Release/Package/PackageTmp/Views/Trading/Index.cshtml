    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>


    <script>
        function checkUser() {
            var all = $("#SelectUserBox").val();
            
            alert(all);
        }

        //function getUserListForSelect() {
